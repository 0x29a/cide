endpoint: "{{ jira_url }}"
user: "{{ github_username }}"
custom-commands:
  - name: sprint
    help: display issues to work on
    script: |-
      {% raw %}{{jira}}{% endraw %} list \
       --template table \
       --query "assignee = {{ github_username }} and sprint in openSprints() and sprint not in futureSprints() and status not in (Recurring, Done, \"Deployed & Delivered\", Archived)"

  - name: sprint_all
    help: display all issues in my sprint
    script: |-
      {% raw %}{{jira}}{% endraw %} list \
       --template table \
       --query "assignee = {{ github_username }} and sprint in openSprints() and sprint not in futureSprints()"

  - name: reviews
    help: display all reviews
    script: |-
      {% raw %}{{jira}}{% endraw %} list \
       --template table \
       --query "\"Reviewer 1\" = {{ github_username }} and sprint in openSprints() and sprint not in futureSprints()"

  - name: second_reviewer
    help: display all issues where I'm a second reviewer
    script: |-
      {% raw %}{{jira}}{% endraw %} list \
       --template table \
       --query "\"Reviewer 2\" = {{ github_username }} and sprint in openSprints() and sprint not in futureSprints()"

  - name: uq
    help: display UQ issues in the current sprint
    script: |-
      {% raw %}{{jira}}{% endraw %} list \
       --template table \
       --query "\"Epic Link\" = BB-1254 and sprint in openSprints() and sprint not in futureSprints()"

  - name: uq_all
    help: display ALL UQ issues
    script: |-
      {% raw %}{{jira}}{% endraw %} list \
       --template table \
       --query "\"Epic Link\" = BB-1254"
